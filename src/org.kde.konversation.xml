<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
"http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.kde.konversation">
    <method name="setAway">
        <arg name="awaymessage" type="s" direction="in" />
    </method>
    <method name="setBack">
    </method>
    <method name="sayToAll">
        <arg name="message" type="s" direction="in" />
    </method>
    <method name="actionToAll">
        <arg name="message" type="s" direction="in" />
    </method>
    <method name="raw">
        <arg name="server" type="s" direction="in" />
        <arg name="command" type="s" direction="in" />
    </method>
    <method name="say">
        <arg name="server" type="s" direction="in" />
        <arg name="target" type="s" direction="in" />
        <arg name="command" type="s" direction="in" />
    </method>
    <method name="info">
        <arg name="string" type="s" direction="in" />
    </method>
    <method name="debug">
        <arg name="string" type="s" direction="in" />
    </method>
    <method name="error">
        <arg name="string" type="s" direction="in" />
    </method>
    <method name="insertMarkerLine">
    </method>
    <method name="connectToServer">
        <arg name="address" type="s" direction="in" />
        <arg name="port" type="i" direction="in" />
        <arg name="channel" type="s" direction="in" />
        <arg name="passwd" type="s" direction="in" />
    </method>
    <method name="getNickname">
        <arg name="serverid" type="s" direction="in" />
        <arg type="s" direction="out" />
    </method>
    <method name="getAnyNickname">
        <arg type="s" direction="out" />
    </method>    
    <method name="listServers">
        <arg type="as" direction="out" />
    </method>
    <method name="listConnectedServers">
        <arg type="as" direction="out" />
    </method>
    <method name="getChannelEncoding">
        <arg name="server" type="s" direction="in" />
        <arg name="channel" type="s" direction="in" />
        <arg type="s" direction="out" />
    </method>
    <method name="setScreenSaverStarted">
    </method>
    <method name="setScreenSaverStopped">
    </method>
  </interface>
</node>
